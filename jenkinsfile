pipeline { 
  agent any
  tools { 
    gradle "Gradle 6"
  }
  stages { 
    stage('clone repository') {
      steps { 
        git 'https://github.com/obota/mongodbgallery.git/'
      }
    }
    stage('Build project') {
        steps { 
            sh 'gradle build'
        }
    }
    stage('Tests') {
    steps { 
            sh 'gradle test'
        }
    }
  }
}